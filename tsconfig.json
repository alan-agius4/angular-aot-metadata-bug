{
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": true,
        "stripInternal": true,
        "experimentalDecorators": true,
        "module": "es2015",
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": ".",
        "sourceMap": true,
        "inlineSources": true,
        "target": "es2015",
        "lib": [
            "es2015",
            "dom"
        ],
        "skipLibCheck": true,
        "strictNullChecks": true
    },
    "exclude": [
        "node_modules"
    ],
    "files": [
        "src/index.ts"
    ],
    "angularCompilerOptions": {
        "genDir": "./dist",
        "annotateForClosureCompiler": true,
        "strictMetadataEmit": true,
        "flatModuleOutFile": "lib.js",
        "flatModuleId": "library"
    }
}